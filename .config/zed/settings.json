// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://devbox:11434"
    }
  },
  "theme": {
    "mode": "system",
    "light": "Github Dark",
    "dark": "Github Dark"
  },
  "auto_update": true,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "format_on_save": "on",
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "always"
  },
  "project_panel": {
    "dock": "right",
    "auto_reveal_entries": true,
    "file_icons": true,
    "git_status": true,
    "indent_size": 5,
    "default_width": 200
  },
  "buffer_font_features": {
    "calt": false,
    "liga": false
  },
  "terminal": {
    "option_as_meta": true,
    "font_features": {
      "ligatures": false
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  }
}
